@model Friend

@{
    @* Layout = "~/Views/Shared/_Layout.cshtml"; *@
    ViewBag.Title = "MVC App";
}

<h1>Hello world from MVC.</h1>

<h2>@ViewData["HeadTitle"]</h2>
@{
    var friendData = ViewData["Friend"] as net_core_web.Model.Friend;
}

<div>
    <p>
        Name: @friendData.Name
    </p>
    <p>
        Mail: @friendData.Email
    </p>
    <p>
        City: @friendData.City
    </p>
</div>

