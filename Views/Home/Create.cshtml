@model Friend

@{
    ViewBag.Title = "New Friend";
}

<form asp-controller="Home" asp-action="Create" method="POST">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="E-Mail" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="City" class="custom-select mr-sm-2"
                asp-items="Html.GetEnumSelectList<Province>()"></select>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 m-3">
                <button type="submit" class="btn btn-primary">Create New</button>
            </div>
        </div>
    </div>
</form>