@model CreateFriendModel

@{
    ViewBag.Title = "New Friend";
}

<form asp-controller="Home" method="POST">

    @* Validating all children *@
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            @* Custom validation by Model *@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="E-Mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="City" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Province>()">
                <option value="">Select one</option>
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        @* Load custom image file *@
        <div>
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Load an image...</label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 m-3">
            <button type="submit" class="btn btn-primary">Create New</button>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function(){
                $(".custom-file-input").on("change", ()=>{
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next(".custom-file-label").html(fileName);
                });
            });
        </script>
    }
</form>