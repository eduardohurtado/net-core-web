@model ViewDetails

@{
    ViewBag.Title = "MVC App";
    var photoRoute = "~/images/" + (Model.Friend.photoRoute ?? "NET_core.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Friend.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoRoute" asp-append-version="true" alt="Image" />

                <h4>Friend ID: @Model.Friend.Id</h4>
                <h4>Email: @Model.Friend.Email</h4>
                <h4>City: @Model.Friend.City</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="Home" asp-action="Modify" asp-route-id="@Model.Friend.Id"
                    class="btn btn-primary">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
